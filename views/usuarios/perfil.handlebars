<a href="/usuarios/"><button class="btn btn-sm"> voltar </button></a>

<h1>{{usuario.nome}}</h1>
<h4>{{usuario.arroba}}</h4>
<br>
        <h4 class="mt-3">{{usuario.biografia}}</h4>
        <small class="mt-1 mb-1 m-2">Seguindo : {{usuario.seguindo.length}}</small>
        <small class="mt-1 mb-1 m-2">Seguidores : {{usuario.seguidores.length}}</small>
        <br>
        <hr class="my-4 mt-2">
<div class="card">
    <div class="card-body">
        <div class="bg-light p-5 rounded-lg m-3">
        <h3>Posts: </h3>
            {{#each postagens}}
                <div class="card mt-2">
                    <div class="card-body">
                        <h3>{{usuario.nome}}</h3>
                        <small>{{usuario.arroba}}</small>
                        <hr class="my-4">
                        <p class="mt-3">{{conteudo}}</p>
                        <hr class="my-4">
                        <small>{{date}}</small>
                        <br>
                        <a href="/postagens/apagar/{{_id}}"><button class="btn btn-sm btn-danger mt-2">excluir</button></a>
                    </div>
                </div>
            {{else}}
                <h1>Este usuário ainda não possui postagens :( </h1>
            {{/each}}
        </div>
    </div>
</div>




