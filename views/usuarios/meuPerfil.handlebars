<h1>Perfil pessoal</h1>
<div class="card">
    <div class="card-body">
        <h2>{{users.nome}}</h2>
        <small>{{users.arroba}}</small>
        <h4 class="mt-3">{{users.biografia}}</h4>
        <hr class="my-4 mt-2">
        <div class="bg-light p-5 rounded-lg m-3">
        <a href="/postagens/"><button class="btn btn-primary">TUITAR</button></a>
        <hr class="my-4">
        <h3>Posts: </h3>
            {{#each postagens}}
                <div class="card mt-2">
                    <div class="card-body">
                        <h3>{{usuario.nome}}</h3>
                        <small>{{usuario.arroba}}</small>
                        <hr class="my-4">
                        <p class="mt-3">{{conteudo}}</p>
                        <hr class="my-4">
                        <small>{{date}}</small>
                        <br>
                        <a href="/postagens/apagar/{{_id}}"><button class="btn btn-sm btn-danger mt-2">excluir</button></a>
                    </div>
                </div>
            {{else}}
                <h1>você ainda não possui postagens :( </h1>
            {{/each}}
        </div>
    </div>
</div>




