<h1>De quem você segue: </h1>
<div class="bg-light p-5 rounded-lg m-3">
    {{#each postagens}}
        <div class="card mt-2">
            <div class="card-body">
                <h3>{{usuario.nome}}</h3>
                <small>{{usuario.arroba}}</small>
                <hr class="my-4">
                <p class="mt-3">{{conteudo}}</p>
                <p>curtidas: {{curtidas.length}}</p>
                <hr class="my-4">
                <a href="/postagens/curtir/{{_id}}"><button class="btn btn-sm btn-success">curtir</button></a>
                <br>
                <small>{{date}}</small>
            </div>
        </div>
    {{else}}
        <h1>Ainda não há postagens aqui :/ </h1>
    {{/each}}
</div>